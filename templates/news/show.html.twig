{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th> Id </th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th> Titre </th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th> Description </th>
                <td>{{ news.description }}</td>
            </tr>
            <tr>
                <th> Nom de l'image </th>
                <td>{{ news.imageName }}</td>
            </tr>
            <tr>
                <th> Créé le </th>
                <td>{{ news.createdAt ? news.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th> Mis à jour le </th>
                <td>{{ news.updatedAt ? news.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_news_index') }}"> Revenir à la liste </a>

    <a href="{{ path('app_news_edit', {'id': news.id}) }}" class="btn btn-success my-3"> Éditer </a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}
