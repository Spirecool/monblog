{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot-de-passe{% endblock %}

{% block body %}
{% block navbar %} {% endblock %}
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4" style="width: 100%; max-width: 400px;">
            <div class="card-body">
                <h1 class="h3 mb-3 font-weight-normal text-center">Réinitialiser votre mot-de-passe</h1>

                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(requestForm) }}
                    <div class="mb-3">
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                Renseignez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot-de-passe.
                            </small>
                        </div>
                    </div>
                    <button class="btn btn-primary w-100">Envoyer l'e-mail de réinitialisation du mot-de-passe</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %} {% endblock %}